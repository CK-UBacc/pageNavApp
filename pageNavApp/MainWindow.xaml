<Window x:Class="pageNavApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:pageNavApp.ViewModel"
        xmlns:Menu="clr-namespace:pageNavApp.Utilities"
        xmlns:local="clr-namespace:pageNavApp"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600" Width="850"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent">

    <Window.DataContext>
        <vm:NavigationVM/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="849*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Window Border -->
        <Border Background="#212529"
                CornerRadius="20" Grid.ColumnSpan="4"/>

        <Grid Grid.ColumnSpan="4">
            <!-- Base Grid -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="228"/>
                <ColumnDefinition Width="622"/>
            </Grid.ColumnDefinitions>

            <!-- Nav Panel -->
            <Grid HorizontalAlignment="Left"
              Width="228">

                <Border Background="#272b2f"
                    CornerRadius="20,0,0,20"/>

                <StackPanel Height="400"
                        Width="228">

                    <!-- Home -->
                    <Menu:Btn Style="{StaticResource BtnStyle}"
                          Command="{Binding HomeCommand}"
                          IsChecked="True">
                        <Grid>
                            <Image Source="Images/img_home.png"
                                   Style="{StaticResource Image_Style}"/>

                            <TextBlock Text="Home"
                                       Style="{StaticResource Text_Style}"/>
                        </Grid>
                    </Menu:Btn>

                    <!-- Customer -->
                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding CustomersCommand}">
                        <Grid>
                            <Image Source="Images/img_customer.png"
                                   Style="{StaticResource Image_Style}"/>
                            <TextBlock Text="Customer"
                                       Style="{StaticResource Text_Style}"/>
                        </Grid>
                    </Menu:Btn>

                    <!-- Products -->
                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding ProductsCommand}">
                        <Grid>
                            <Image Source="Images/img_product.png"
                                   Style="{StaticResource Image_Style}"/>
                            <TextBlock Text="Products"
                                       Style="{StaticResource Text_Style}"/>
                        </Grid>
                    </Menu:Btn>

                    <!-- Orders -->
                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding OrdersCommand}">
                        <Grid>
                            <Image Source="Images/img_order.png"
                                   Style="{StaticResource Image_Style}"/>
                            <TextBlock Text="Orders"
                                       Style="{StaticResource Text_Style}"/>
                        </Grid>
                    </Menu:Btn>

                    <!-- Transactions -->
                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding TransactionsCommand}">
                        <Grid>
                            <Image Source="Images/img_transaction.png"
                                   Style="{StaticResource Image_Style}"/>
                            <TextBlock Text="Transactions"
                                       Style="{StaticResource Text_Style}"/>
                        </Grid>
                    </Menu:Btn>

                    <!-- Shipments -->
                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding ShipmentsCommand}">
                        <Grid>
                            <Image Source="Images/img_shipment.png"
                                   Style="{StaticResource Image_Style}"/>
                            <TextBlock Text="Shipments"
                                       Style="{StaticResource Text_Style}"/>
                        </Grid>
                    </Menu:Btn>

                    <!-- Settings -->
                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding SettingsCommand}">
                        <Grid>
                            <Image Source="Images/img_setting.png"
                                   Style="{StaticResource Image_Style}"/>
                            <TextBlock Text="Settings"
                                       Style="{StaticResource Text_Style}"/>
                        </Grid>
                    </Menu:Btn>
                </StackPanel>
            </Grid>

            <!-- Display window that displays the other pages -->
            <Grid Grid.Column="1">
                <!-- If you are getting a XDG0066 error here dont worry thats normal and doesn't actualy break anything-->
                <ContentControl x:Name="Pages"
                                Content="{Binding CurrentView}"/>
            </Grid>

        </Grid>
        <Button x:Name="CloseApp"
                Style="{StaticResource ExitApp}"
                Click="CloseApp_Click"/><!-- Rather than calling a command in "NavigationVM.cs" like the other buttons this one calls a function in "MainWindow.xaml.cs-->
    </Grid>
</Window>
